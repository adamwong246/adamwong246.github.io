doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    link(href='/style.css', rel='stylesheet', type="text/css")
    block page_title
      title exact change only
  body.HolyGrail.Site
    header
      a(href="/")
        h1 exact change only
      a(href="mailto:" + package.author.email)= package.author.email
    .HolyGrail-body
      main.HolyGrail-content
        block content
          != self.content
      nav.HolyGrail-nav
        ul.pages
          li
            a(href="/resume.html") resume.html
        ul.blog_entries
          - for entry in blog_entries
            li
              a(href=entry.url)= entry.meta.title
      aside.HolyGrail-ads
    footer
      a(href='/') home
      br
      a(href=package.repository.url) source
      br
      = "v" + package.version
      br
      span= package.author.name
      br
      a(href="mailto:" + package.author.email)= package.author.email
      br
      span 2015

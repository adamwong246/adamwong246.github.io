  .Grid {
    display: flex;
  }

  .Grid-cell {
    flex: 1;
  }
  /* Base classes for all media */
  .Grid--fit > .Grid-cell {
    flex: 1;
  }
  .Grid--full > .Grid-cell {
    flex: 0 0 100%;
  }
  .Grid--1of2 > .Grid-cell {
    flex: 0 0 50%
  }
  .Grid--1of3 > .Grid-cell {
    flex: 0 0 33.3333%
  }
  .Grid--1of4 > .Grid-cell {

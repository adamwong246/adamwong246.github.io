extends ../views/layout.jade

block content
  - for entry in blogEntries
    - var content = cheerio.load(entry.markdownContent)(':root')
    article
      header
        h2
          a(href=entry.url)= entry.meta.title
        h4
          time= moment(entry.meta.publishedAt).format("MMMM Do YYYY")
      != content.first()
      if (content.length > 1)
        .clearfix
          a.right(href=entry.url) Read more...
    hr

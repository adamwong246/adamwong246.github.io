doctype html
html(lang="en")
  head
    link(href='/main.css', rel='stylesheet')
  body
    a(href='/')
      h1 Exact Change Only
    ul
      li
        a(href=about_me().url)
          | about_me
      li
        a(href='/resumes/resume.html')
          | resume.html
      li
        a(href='/resumes/resume.md')
          | resume.md
      li
        a(href='/resumes/resume.pdf')
          | resume.pdf
      each blog in blogs()
        li
          a(href=blog.url)
            = blog.markdown.meta.title
    block content
    div!= self.content


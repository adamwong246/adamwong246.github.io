extends ../views/layout.jade

block content
  - for entry in blogEntries.slice(0, 5)
    article
      header
        h2
          a(href=entry.url)= entry.meta.title
        h4
          time= moment(entry.meta.publishedAt).format("MMMM Do YYYY")
      != truncateHtml(entry.markdownContent, 50, { byWords: true, keepWhitespaces: true })
      br
      a(href=entry.url) Read more...
    hr
  h5#more-blog-entries
    include ./blogLink

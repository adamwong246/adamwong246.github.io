extends layout.jade

block pageTitle
  title
    = entry.meta.title

block content
  include blogEntryPartial
  hr
  
  if(entry.meta.previous)
    a.back-link(href=entry.meta.previous.url)
      | ⬅️
      = entry.meta.previous.title
  if(entry.meta.next)
    a.forward-link(href=entry.meta.next.url)
      = entry.meta.next.title
      | ➡️
  

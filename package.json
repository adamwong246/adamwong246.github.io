{
  "name": "adamwong246.github.io",
  "version": "2.3.0",
  "license": "ISC",
  "description": "An exceedingly simple blog. Powered by funkophile!",
  "author": {
    "name": "Adam Wong",
    "email": "adamwong246@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamwong246/adamwong246.github.io"
  },
  "bugs": {
    "url": "https://github.com/adamwong246/adamwong246.github.io/issues"
  },
  "homepage": "http://adamwong246.github.io/",
  "type": "module",
  "scripts": {
    "funkophile:build": "tsx funkophile.config.ts build",
    "funkophile:watch": "tsx funkophile.config.ts watch",
    "funkophile:dev": "nodemon --exec \"tsx funkophile.config.ts watch\"",
    "serve": "node ./server.cjs",
    "dev": "yarn serve & yarn funkophile:dev",
    "cleanBuild": "rm -rf dist/**; yarn funkophile:build; yarn resume:pdf; yarn resume:html; yarn resume:md",
    "newBlogEntry": "tsx newBlogEntry.ts",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "build:ts": "tsc",
    "deploy": "git push origin `git subtree split --prefix dist dev`:master --force",
    "shipIt!": "yarn cleanBuild && git add --all && git push origin dev && git commit && yarn deploy",
    "resume:pdf": "pandoc src/resume.rmd -o dist/resume.pdf -t html --embed-resources --standalone --css node_modules/typebase.css/typebase.css --css dist/resume.pdf.css",
    "resume:html": "pandoc src/resume.rmd -o dist/resume.html -t html --embed-resources --standalone --css node_modules/typebase.css/typebase.css --css dist/resume.html.css",
    "resume:md": "pandoc src/resume.rmd -o dist/resume.md -t markdown_strict"
  },
  "dependencies": {
    "cherio": "^1.0.0-rc.2",
    "chokidar": "3.5.1",
    "clean-css": "4.2.3",
    "esbuild": "^0.27.0",
    "express": "^4.21.2",
    "fs-extra": "^11.3.0",
    "funkophile": "../funkophile",
    "fuse.js": "^6.4.6",
    "glob": "11.0.1",
    "jade": "1.11.0",
    "jimp": "^1.6.0",
    "jstransformer-marked": "^1.0.3",
    "lodash": "^2.4.1",
    "marky-mark": "latest",
    "moment": "^2.9.0",
    "node-pandoc": "^0.3.0",
    "nodemon": "^2.0.4",
    "normalize.css": "^3.0.2",
    "path": "^0.11.14",
    "reselect": "^4.0.0",
    "simple-icons": "^2.7.0",
    "slug": "^0.8.0",
    "truncate-html": "^1.0.3",
    "typebase": "^1.0.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.38",
    "@types/jade": "^1.11.13",
    "@types/jimp": "^0.2.28",
    "@types/lodash": "^4.14.202",
    "@types/moment": "^2.13.0",
    "@types/node": "^22.10.6",
    "@types/slug": "^5.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}

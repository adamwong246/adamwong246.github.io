css:
  .freetile{
    background-color: lightgray;
    padding: 1em;
    margin: 1em;
  }

#freetile-container
  -(1..50).each do |i|
    .freetile style="width:#{10*(1 + Random.rand(4))}em"
      p 
        = (1 + Random.rand(9)).sentences

<script type="text/javascript" src="/assets/js/vendor/bower_components/jquery/jquery.js"></script>
<script type="text/javascript" src="http://apex.yconst.com/freetile-demo/jquery.freetile.js"></script>

javascript:
  $('#freetile-container').freetile({
    selector: '.freetile',
    animate: true,
    elementDelay: 30
  });

